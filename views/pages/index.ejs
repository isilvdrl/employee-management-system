<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/main.css" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
    <div>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/location">Location</a></li>
            <li><a href="/contact">Contact</a></li>
        </ul>
    </div>
    <tr>


        <div class="container mt-5 pt-5">
            <table class="table">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Start Date</th>
                    <th>Salary</th>
                    <th>Department</th>
                    <th>Title</th>
                    <th>Executive</th>
                    <th>Mail</th>
                    <th>Edit</th>
                </tr>
                <% result.forEach(function(item) { %>

                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.isim %>
                        </td>
                        <td>
                            <%= item.soyisim %>
                        </td>
                        <td>
                            <%= item.tel%>
                        </td>
                        <td>
                            <%= item.startDate %>
                        </td>
                        <td>
                            <%= item.maas %>
                        </td>
                        <td>
                            <%= item.departman %>
                        </td>
                        <td>
                            <%= item.unvan %>
                        </td>
                        <td>
                            <%= item.yonetici %>
                        </td>
                        <td>
                            <%= item.mail %>
                        </td>
                        <td>
                            <form action="/delete" method="post">
                                <input type="hidden" value="<%= item.id %>" name="id">
                                <input type="submit" value="delete" class="btn btn-danger">
                            </form>
                        </td>

                        <td>
                            <form action="/edit" method="post">
                                <input type="hidden" value="<%= item.id %>" name="id">
                                <input type="submit" value="edit" class="btn btn-primary">
                            </form>
                        </td>
                        <td>
                            <form action="/title" method="post">
                                <input type="hidden" value="<%= item.id %>" name="id">
                                <input type="submit" value="edit title" class="btn btn-primary">
                            </form>
                        </td>

                    </tr>



                    <% }) %>

                        <form action="/create" method="get">
                            <input type="hidden" value="id" name="id">
                            <input type="submit" value="create new employee" class="btn btn-primary">
                        </form>
                        <form action="/create_location" method="get">
                            <input type="hidden" value="id" name="id">
                            <input type="submit" value="create new location" class="btn btn-primary">
                        </form>
                        </td>
    </tr>

    </table>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
</body>

</html>